<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_avg_vote"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fallingskybd"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/dark_blue"
        />
    <EditText
        android:id="@+id/edittext_select_average_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="0"
        android:textSize="50dp"
        android:maxLength="4"
        android:textColor="@color/black"
        android:fontFamily="@font/fallingskybd"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal"
        />
    <Button
        android:id="@+id/button_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
       android:background="@drawable/ic_baseline_add_24"
        android:layout_below="@id/edittext_select_average_vote"
        android:layout_toLeftOf="@id/edittext_select_average_vote"
        />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_horizontal_rule_24"
        android:layout_below="@id/edittext_select_average_vote"
        android:layout_toRightOf="@id/edittext_select_average_vote"
        />

    <Button
        android:id="@+id/button_done_avg_vote_popup"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:backgroundTint="@color/dark_blue"
        android:textSize="20dp"
        android:fontFamily="@font/fallingskybd"
        android:layout_below="@+id/button_add"
        android:layout_toLeftOf="@id/edittext_select_average_vote"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/button_cancel_avg_vote_popup"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:backgroundTint="@color/dark_blue"
        android:textSize="20dp"
        android:fontFamily="@font/fallingskybd"
        android:layout_below="@+id/button_add"
        android:layout_toRightOf="@id/edittext_select_average_vote"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        />

</RelativeLayout>